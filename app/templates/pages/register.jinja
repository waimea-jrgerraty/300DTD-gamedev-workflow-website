{#=====================================================
  User Registration page
  - Form for adding a new user
=====================================================#}
{% extends "pages/base.jinja" %}
{% block title %}
    TaskForge - Register
{% endblock title %}
{% block content %}
    <div id="fluid">
        <article>
            <header>
                <h2>Sign Up</h2>
            </header>
            <form action="/add-user" method="post">
                <input type="text"
                       name="username"
                       placeholder="Username"
                       autocomplete="username"
                       required>
                <input type="password"
                       name="password"
                       placeholder="Password"
                       autocomplete="new-password"
                       minlength="8"
                       required>
                <button>Sign Up</button>
            </form>
            <footer>
                Or, if you already have an account, <a href="/login">sign in</a>
            </footer>
        </article>
    </div>
{% endblock content %}
